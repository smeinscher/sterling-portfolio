#version 300 es

precision mediump float;

out vec4 frag_color;

in vec4 color;

void main()
{
    frag_color = color;
}
#version 300 es

precision mediump float;

layout(location = 0) in vec2 a_pos;
layout(location = 2) in vec4 a_color;

out vec4 color;

uniform mat4 view;
uniform mat4 projection;

void main()
{
    gl_Position = projection * view * vec4(a_pos, 0.0, 1.0);
    color = a_color;
}
